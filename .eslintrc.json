{
    "parser": "babel-eslint",
    "env": {
        "commonjs": true,
        "es6": true,
        "mocha": true,
        "node": true
    },
    "plugins": [
        "require-path-exists"
    ],
    "extends": [
        "standard",
        "plugin:prettier/recommended",
        "plugin:require-path-exists/recommended"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "rules": {
        "no-var": "error",
        "no-process-exit": "warn"
    }
}